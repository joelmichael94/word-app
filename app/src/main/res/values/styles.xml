<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DataBinding.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DataBinding.AlertDialog.PositiveButton
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/DataBinding.AlertDialog.NegativeButton
        </item>
        <item name="shapeAppearanceOverlay">@style/DataBinding.AlertDialog.Rounded</item>
        <item name="colorSurface">@color/app_1</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DataBinding.AlertDialog.Body</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DataBinding.AlertDialog.Title</item>
    </style>

    <style name="DataBinding.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/app_6</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataBinding.AlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/app_6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DataBinding.AlertDialog.Rounded" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="DataBinding.AlertDialog.PositiveButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/app_7</item>
        <item name="android:textColor">@color/app_1</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DataBinding.AlertDialog.NegativeButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/app_5</item>
        <item name="android:textColor">@color/app_1</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>
</resources>